<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppThemeLight.Base" parent="Theme.Material3.Light">
        <item name="colorPrimary">              @color/colorPrimary</item>
        <item name="colorPrimaryDark">          @color/colorPrimaryDark</item>
        <item name="colorAccent">               @color/colorAccent</item>
        <item name="colorControlNormal">        ?android:textColorSecondary</item>
        <item name="colorControlActivated">     @color/colorAccent</item>
        <item name="windowActionBar">           false</item>
        <item name="windowActionModeOverlay">   true</item>
        <item name="windowNoTitle">             true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="actionMenuTextColor">       ?attr/colorToolbarText</item>
        <item name="android:itemBackground">    @color/colorBackgroundLightMenu</item>
        <item name="actionModeStyle">           @style/AppThemeLight.ActionMode</item>
        <item name="android:actionModeStyle">   @style/AppThemeLight.ActionMode</item>
        <item name="actionModeCloseDrawable">   @drawable/ic_clear</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.AppCompat.ActionButton.CloseMode</item>
        <item name="drawerArrowStyle">          @style/AppThemeLight.DrawerArrowStyle</item>

        <item name="android:windowTranslucentStatus"        tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation"    tools:targetApi="kitkat">true</item>
        <item name="android:colorEdgeEffect"                tools:targetApi="lollipop">?attr/colorToolbar</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>
        <item name="android:enforceNavigationBarContrast"   tools:targetApi="q">false</item>

        <item name="colorToolbar">              @color/colorBackgroundLightTransparent</item>
        <item name="colorToolbarText">          @color/colorTextBlack</item>
        <item name="colorToolbarIcon">          @color/colorTextBlack</item>
        <item name="colorMenuIcon">             @color/colorTextBlackSecondary</item>
        <item name="colorStatusBar">            @color/colorPrimaryDark</item>
        <item name="bgSelectable">              @drawable/bg_selectable_light_theme</item>
        <item name="colorFab">                  @color/colorPrimary</item>
        <item name="colorFabIcon">              @android:color/white</item>
        <item name="colorFabSelected">          @color/colorPrimaryVeryDark</item>
        <item name="colorFabShadow">            @color/ColorBackgroundGrey850</item>
        <item name="colorDropdownBackground">   @android:color/white</item>
        <item name="colorSectionHeader">        @color/ColorBackgroundGrey100</item>
        <item name="colorBackground">           @color/colorBackgroundLight</item>
        <item name="colorText">                 @color/colorTextBlack</item>
        <item name="colorTextDisabled">         @color/colorTextBlackDisabled</item>
        <item name="colorTextSecondary">        @color/colorTextBlackSecondary</item>
        <item name="colorTextSecondaryDisabled">@color/colorTextBlackSecondaryDisabled</item>
        <item name="colorTextHint">             @color/colorTextBlackHint</item>
        <item name="colorDivider">              @color/colorTextBlackDivider</item>
        <item name="bgDivider">                 @drawable/divider_light</item>
        <item name="bgDividerSelected">         @drawable/divider_light_selected</item>
        <item name="colorNavbar">               @color/colorBackgroundDarkTransparent</item>
        <item name="colorMenuBackground">       @color/colorBackgroundLightMenu</item>

        <!--<item name="android:windowAnimationStyle">@null</item>-->
    </style>
    <style name="AppThemeLight" parent="AppThemeLight.Base"/>

    <style name="AppThemeDark.Base" parent="Theme.Material3.Dark">
        <item name="colorPrimary">              @color/colorPrimary</item>
        <item name="colorPrimaryDark">          @color/colorPrimaryDark</item>
        <item name="colorAccent">               @color/colorAccent</item>
        <item name="colorControlNormal">        ?android:textColorSecondary</item>
        <item name="colorControlActivated">     @color/colorAccent</item>

<!--    выключить системный общий экшенмар от активити, вместо него юзаются тулбары на фрагментах-->
        <item name="windowActionBar">           false</item>
        <item name="windowNoTitle">             true</item>
        <item name="android:windowDisablePreview">true</item>   <!--быстрее загрузка в первый раз-->
        <item name="actionMenuTextColor">       ?attr/colorToolbarText</item>
        <item name="android:itemBackground">    @color/colorBackgroundDarkMenu</item>

<!--    установка цвета экшенмода-->
        <item name="windowActionModeOverlay">   true</item>
        <item name="actionModeStyle">           @style/AppThemeDark.ActionMode</item>
        <item name="android:actionModeStyle">   @style/AppThemeDark.ActionMode</item>

<!--    крестик вместо кнопки назад в экшенмоде-->
        <item name="actionModeCloseDrawable">   @drawable/ic_clear</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.AppCompat.ActionButton.CloseMode</item>

<!--    установка цвета иконок на тулбаре-->
        <item name="drawerArrowStyle">          @style/AppThemeDark.DrawerArrowStyle</item>

        <item name="android:windowTranslucentStatus"        tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation"    tools:targetApi="kitkat">true</item>
        <item name="android:colorEdgeEffect"                tools:targetApi="lollipop">?attr/colorToolbar</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>
        <item name="android:enforceNavigationBarContrast"   tools:targetApi="q">false</item>

        <item name="colorToolbar">              @color/colorBackgroundDarkTransparent</item>
        <item name="colorToolbarText">          @color/colorTextWhite</item>
        <item name="colorToolbarIcon">          @color/colorTextWhite</item>
        <item name="colorMenuIcon">             @color/colorTextWhiteSecondary</item>
        <item name="colorStatusBar">            @color/colorPrimaryDark</item>
        <item name="bgSelectable">              @drawable/bg_selectable_dark_theme</item>
        <item name="colorFab">                  @color/colorPrimary</item>
        <item name="colorFabIcon">              @android:color/white</item>
        <item name="colorFabSelected">          @color/colorPrimaryVeryDark</item>
        <item name="colorFabShadow">            @android:color/black </item>
        <item name="colorDropdownBackground">   @color/ColorBackgroundGrey800</item>
        <item name="colorSectionHeader">        @color/ColorBackgroundGrey800</item>
        <item name="colorBackground">           @color/colorBackgroundDark</item>
        <item name="colorText">                 @color/colorTextWhite</item>
        <item name="colorTextDisabled">         @color/colorTextWhiteDisabled</item>
        <item name="colorTextSecondary">        @color/colorTextWhiteSecondary</item>
        <item name="colorTextSecondaryDisabled">@color/colorTextWhiteSecondaryDisabled</item>
        <item name="colorTextHint">             @color/colorTextWhiteHint</item>
        <item name="colorDivider">              @color/colorTextWhiteDivider</item>
        <item name="bgDivider">                 @drawable/divider_dark</item>
        <item name="bgDividerSelected">         @drawable/divider_dark_selected</item>
        <item name="colorNavbar">               @color/colorBackgroundDarkTransparent</item>
        <item name="colorMenuBackground">       @color/colorBackgroundDarkMenu</item>
    </style>

    <style name="AppThemeDark" parent="AppThemeDark.Base"/>


    <style name="AppThemeLight.Dialog" parent="Theme.Material3.Light.Dialog.Alert" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundLightMenu</item>
    </style>

    <style name="AppThemeDark.Dialog" parent="Theme.Material3.Dark.Dialog.Alert" >
        <item name="colorPrimary">  @color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundDarkMenu</item>
    </style>


    <!--    цвета фона в экшенмоде-->
    <style name="AppThemeLight.ActionMode" parent="@style/Widget.Material3.ActionMode">
        <item name="android:actionModeBackground"> @color/colorBackgroundLight</item>
        <item name="actionModeBackground"> @color/colorBackgroundLight</item>
        <item name="android:background">@color/colorBackgroundLight</item>
        <item name="background">@color/colorBackgroundLight</item>
    </style>

    <style name="AppThemeDark.ActionMode" parent="@style/Widget.Material3.ActionMode">
        <item name="android:actionModeBackground"> @color/colorBackgroundDark</item>
        <item name="actionModeBackground">@color/colorBackgroundDark</item>
        <item name="android:background">@color/colorBackgroundDark</item>
        <item name="background">@color/colorBackgroundDark</item>
    </style>



    <style name="AppThemeLight.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?colorToolbarIcon</item>
    </style>

    <style name="AppThemeDark.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?colorToolbarIcon</item>
    </style>

</resources>
